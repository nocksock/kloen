{
  "name": "kloen",
  "description": "super tiny pubsub",
  "homepage": "https://git.sr.ht/~snock/kloen",
  "version": "0.9.1",
  "type": "module",
  "files": [
    "lib"
  ],
  "module": "./lib/kloen.js",
  "types": "./lib/kloen.d.ts",
  "main": "./lib/kloen.js",
  "packageManager": "pnpm",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "release:minor": "pnpm version minor && pnpm publish --no-git-checks",
    "release:patch": "pnpm version patch && pnpm publish --no-git-checks",
    "gzip:watch": "fd | entr zsh -c pnpm run gzip:check",
    "gzip:check": "cat dist/kloen.js| gzip -9 > kloen.js.gz  && ls -la kloen.js.gz && ls -la lib/"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "vite": "^5.2.10"
  },
  "dependencies": {
    "terser": "^5.31.1",
    "vitest": "^1.6.0"
  }
}
