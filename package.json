{
  "name": "kloenen",
  "description": "super tiny pubsub",
  "homepage": "https://git.sr.ht/~snock/kloenen",
  "version": "0.4.3",
  "type": "module",
  "files": [ "lib" ],
  "module": "./lib/kloenen.js",
  "types": "./lib/kloenen.d.ts",
  "main": "./lib/kloenen.js",
  "packageManager": "pnpm",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "release:minor": "pnpm version minor && pnpm publish --no-git-checks",
    "release:patch": "pnpm version patch && pnpm publish --no-git-checks",
    "gzip:watch": "fd | entr zsh -c 'cat lib/main.js| gzip -9 > main.js.gz  && ll main.js.gz && ll lib/'"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "vite": "^5.2.10"
  },
  "dependencies": {
    "kloenen": "link:",
    "vitest": "^1.6.0"
  }
}
